<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_history_order_item_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="67d781ddd93838d8e681128c"
            android:textSize="10sp"
            android:textColor="@android:color/darker_gray" />

        <ImageView
            android:id="@+id/iv_history_order_store_avatar"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/avatar"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tv_history_order_item_store_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên quán"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="6dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/home"
                android:layout_marginEnd="6dp" />

            <TextView
                android:id="@+id/tv_history_order_item_store_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="307/17 Bàu Cát, phường 12"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/location"
                android:layout_marginEnd="6dp" />

            <TextView
                android:id="@+id/tv_history_order_item_shipping_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Giao tới: 307/17 Bàu Cát"
                android:textSize="10sp" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_history_order_item_detail"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:backgroundTint="@color/green_2"
            android:contentDescription="Chi tiết"
            android:padding="8dp"
            android:text="Chi tiết"
            android:textSize="10sp"
            app:icon="@drawable/ic_info"
            app:iconTint="@color/white"
            app:iconGravity="textStart"
            app:cornerRadius="8dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
