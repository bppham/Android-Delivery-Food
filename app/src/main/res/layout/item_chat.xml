<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/backgroundColor"
    android:layout_marginTop="10dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/ivUserAvatar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/avatar" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:paddingStart="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Restaurant Name"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textColor="@color/onPrimary"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"/>

            <Space
                android:layout_width="20dp"
                android:layout_height="wrap_content"/>

            <ImageButton
                android:id="@+id/btnOption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/whiteColor"
                app:srcCompat="@drawable/ic_more" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvLatestMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lorem ipsum dolor sit amet consectetur adipisicing elit. Animi obcaecati voluptatem, nemo aperiam doloremque, magnam quae id soluta inventore aut, vel corporis labore libero officiis. Voluptates reiciendis veniam aliquid eaque."
                android:layout_weight="1"
                android:textSize="16sp"
                android:textColor="@color/onTertiary"
                android:ellipsize="end"
                android:singleLine="true"
                android:maxLines="1"/>

            <Space
                android:layout_width="20dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvCreatedTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13:35"
                android:textSize="16sp"
                android:textColor="@color/onTertiary" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>